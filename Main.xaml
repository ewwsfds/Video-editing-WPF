<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown" 
        Focusable="True"    
        Title="MainWindow" Height="450" Width="800"
        
        Topmost="True"
        Background="#FF1E1E1E">

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Upper Section -->
        <Border Grid.Row="0" Background="#AA111111" CornerRadius="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- MEDIA PANEL -->
                <Border Background="#22111111" CornerRadius="8" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- DRAG and DROP BUTTON -->
                        <Border Background="#33111111" CornerRadius="5" Margin="2">
                            <Button Click="import_media" Content="Import Media" VerticalAlignment="Center" HorizontalAlignment="Center" Width="91"
                                    Background="#FF2D2D30" Foreground="White" BorderThickness="0" Padding="5" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FF2D2D30"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF3A3A40"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FF4A4A50"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Border>

                        <!-- Imported Media ScrollViewer -->
                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                      Background="#22111111" Margin="2" >
                            <Canvas x:Name="imported_media"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- PREVIEW PANEL -->
                <Border Grid.Column="1" Background="#AA222222" CornerRadius="8" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#33111111" CornerRadius="5" Margin="2">
                            <Grid>
                                <Button Content="BTN-1" Width="20" Height="20" Background="#FF2D2D30" Foreground="White" BorderThickness="0"/>
                                <Button Content="BTN-1" Width="20" Height="20" Background="#FF2D2D30" Foreground="White" BorderThickness="0" Margin="255,10,205,10"/>
                                <Button Content="BTN-1" Width="20" Height="20" Background="#FF2D2D30" Foreground="White" BorderThickness="0" Margin="205,10,255,10"/>
                            </Grid>
                        </Border>

                        <Canvas  Grid.Row="1" Name="canvasContainer">
                            <Border  x:Name="preview_border_left" Panel.ZIndex="10" Width="80" Background="Red" Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}" HorizontalAlignment="Left" Canvas.Left="2" VerticalAlignment="Center" />
                            <Rectangle Height="2"  Fill="Green"   Name="Horizontal_line"   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
                            <Rectangle Width="2" Fill="Green" Name="Vertical_line" Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
                            <Border x:Name="preview_border_right" Panel.ZIndex="10" Width="80" Background="Red"   Canvas.Left="301"  Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- EFFECTS PANEL -->
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>

                    <!--Vertical Panels-->
                    <Border Grid.Column="1" Background="#22111111" CornerRadius="8" >
                        <StackPanel Name="MainButtonPanel" Grid.Column="1" VerticalAlignment="Top">
                            <StackPanel>
                                <Image Source="/documents/icons/animation-icon.png" MouseDown="MainButton_Click" Tag="Panel1" Height="33" Width="37" />
                                <TextBlock Text="Animation" Foreground="White" Width="59" FontSize="10" />
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- Side panels container -->
                    <Grid  Name="SidePanelContainer"  Grid.Column="0"  >

                        <!-- Panel 1 -->
                        <Grid Name="Panel1" Background="#FF2D2D30" >

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- header -->
                                <RowDefinition Height="Auto"/>
                                <!-- intro/outro -->
                                <RowDefinition Height="*"/>
                                <!-- scroll area -->
                            </Grid.RowDefinitions>
                            <!-- Header -->
                            <TextBlock Grid.Row="0" Text="Animation" FontWeight="Bold" Margin="5" Foreground="White"/>

                            <!-- Intro & Outro buttons -->
                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Background="LightGray" CornerRadius="8" Margin="5" Padding="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button BorderThickness="0" Width="50" Height="20" Content="Intro" Click="MainButton_Click" Tag="panel_intro_animation" HorizontalAlignment="Stretch"/>
                                    <Button BorderThickness="0" Width="50" Height="20" Content="Outro" Click="MainButton_Click" Tag="panel_outro_animation" Margin="5,0,0,0" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Border>
                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Top">
                                <UniformGrid Columns="3"  VerticalAlignment="Top">
                                    <StackPanel>
                                        <Image gif:ImageBehavior.AnimatedSource="/documents/animation-gif/6ce20cae5d2c4973a8ba0d43f9f30ecf~tplv-fhsjxsyzit-resize_100_100.gif" Margin="4,10,0,0" />
                                        <TextBlock Text="Side Swipe" FontSize="10" Foreground="Wheat" Padding="5"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <Image gif:ImageBehavior.AnimatedSource="/documents/animation-gif/6ce20cae5d2c4973a8ba0d43f9f30ecf~tplv-fhsjxsyzit-resize_100_100.gif" Margin="4,10,0,0" />
                                        <TextBlock Text="Side Swipe" FontSize="10" Foreground="Wheat" Padding="5"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <Image gif:ImageBehavior.AnimatedSource="/documents/animation-gif/6ce20cae5d2c4973a8ba0d43f9f30ecf~tplv-fhsjxsyzit-resize_100_100.gif" Margin="4,10,0,0" />
                                        <TextBlock Text="Side Swipe" FontSize="10" Foreground="Wheat" Padding="5"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <Image gif:ImageBehavior.AnimatedSource="/documents/animation-gif/6ce20cae5d2c4973a8ba0d43f9f30ecf~tplv-fhsjxsyzit-resize_100_100.gif" Margin="4,10,0,0" />
                                        <TextBlock Text="Side Swipe" FontSize="10" Foreground="Wheat" Padding="5"/>
                                    </StackPanel>

                                </UniformGrid>
                            </ScrollViewer>


                            <!-- Scrollable buttons -->
                            <!-- limit height -->

                        </Grid>




                    </Grid>
                </Grid>







                <!-- Vertical buttons -->

            </Grid>
        </Border>

        <!-- Lower Section -->
        <Border Grid.Row="1" Background="#AA111111" CornerRadius="10" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT EDGE -->
                    <StackPanel Grid.Column="0" Margin="10,0,10,0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="L-BTN" Margin="0,0,0,5" Width="20" VerticalAlignment="Center" HorizontalAlignment="Left"
                                Background="#FF2D2D30" Foreground="White" BorderThickness="0" Padding="3" />
                        <Button Content="L-BTN" Margin="0,0,0,5" Width="20" VerticalAlignment="Center" HorizontalAlignment="Right"
                                Background="#FF2D2D30" Foreground="White" BorderThickness="0" Padding="3" />
                    </StackPanel>

                    <!-- MIDDLE -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="Middle Button" Click="PlayBTN" Background="#FF2D2D30" Foreground="White" BorderThickness="0"  Padding="5"/>
                        <Label Content="Label 1" VerticalAlignment="Center" Name="CurrentTime" Foreground="White"/>
                        <Label Content="Label 2" VerticalAlignment="Center" Name="Total_Time" Foreground="White"/>
                    </StackPanel>

                    <!-- RIGHT EDGE -->
                    <Slider x:Name="ZoomSlider" Width="200" Height="40" Grid.Column="2"  Minimum="0" Maximum="6" TickFrequency="1" Value="3"  IsSnapToTickEnabled="True" ValueChanged="ZoomSlider_ValueChanged" Margin="31,10,32,-20"/>


                </Grid>

                <!-- Timeline -->
                <Border Grid.Row="1" Background="#AA111111" CornerRadius="8" Margin="5">
                    <Canvas x:Name="timeline" PreviewMouseLeftButtonDown="Timeline_Click" Background="Transparent">
                        <Canvas Name="timeShower" Background="#FF3A3A40" Height="20" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"  HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Rectangle Width="2" Fill="Red" Name="Vertical_TimeLine" Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
                        <Rectangle Name="rowShower" Fill="#FF3A3A40" Height="40" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" RadiusX="5" RadiusY="5" Canvas.Left="2" Canvas.Top="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    </Canvas>

                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
