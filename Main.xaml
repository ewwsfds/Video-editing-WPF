<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Main grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Upper -->
        <Grid Grid.Row="0" Background="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>


                <!-- MEDIA -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- DRAG and DROP -->
                    <Grid Background="AliceBlue" HorizontalAlignment="Stretch" >
                        <Button Click="import_media" Content="Import Media" VerticalAlignment="Center" HorizontalAlignment="Center" Width="91"></Button>
                    </Grid>

                    <!-- MEDIA -->
                    <ScrollViewer  Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">

                        <Canvas x:Name="imported_media"/>

                    </ScrollViewer>

                </Grid>

                <!-- PREVIEW -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Background="Gray">
                        <Button Content="BTN-1" Width="20" Height="20" Background="Black"/>
                        <Button Content="BTN-1" Width="20" Height="20" Background="Black" Margin="255,10,205,10"/>
                        <Button Content="BTN-1" Width="20" Height="20" Background="Black" Margin="205,10,255,10"/>
                    </Grid>
                    <ScrollViewer Grid.Row="1"  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" >
                        <Canvas Name="previewCanvas" Background="Gray" Margin="156,41,155,41"/>
                    </ScrollViewer>
                </Grid>


                <!-- Effects -->
                <ScrollViewer Grid.Column="2"  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">

                </ScrollViewer>

            </Grid>
        </Grid>


        <!-- Lower -->
        <Grid Grid.Row="1" Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT EDGE -->
                <StackPanel Grid.Column="0"  Margin="10,0,10,0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="L-BTN" Margin="0,0,0,5" Width="20" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <Button Content="L-BTN" Margin="0,0,0,5" Width="20" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </StackPanel>

                <!-- MIDDLE -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"  
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                    <Button Content="Middle Button"/>
                    <Label Content="Label 1" VerticalAlignment="Center"/>
                    <Label Content="Label 2" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- RIGHT EDGE -->
                <Slider Grid.Column="2" HorizontalAlignment="Right"
                Width="120"
                VerticalAlignment="Center"
                Margin="10"/>
            </Grid>

            <Canvas Grid.Row="1" Background="Black" x:Name="timeline">
                <Rectangle Name="rowShower" Fill="Aqua" Height="40" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
            </Canvas>
        </Grid>
    </Grid>



</Window>
